{
  "env": {
    "NODE_ENV": "production"
  },
  "watch": [
    "app.js",
    "views",
    "webpack.config.js",
    "controller",
    "routes",
    "models"
  ],
  "ignore": [
    "dist",
    "public/dist",
    "src",
    ".git",
    "node_modules",
    "views/project_bundled.ejs"
  ],
  "ext": "js,ejs",
  "restartable": "rs",
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  }
}
