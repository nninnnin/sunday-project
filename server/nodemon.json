{
  "env": {
    "NODE_ENV": "development"
  },
  "watch": [
    "app.js",
    "views",
    "controllers",
    "routes",
    "models",
    "public/libs"
  ],
  "ignore": ["dist", "src", "node_modules", "../dist"],
  "ext": "js,ejs",
  "restartable": "rs",
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  }
}
