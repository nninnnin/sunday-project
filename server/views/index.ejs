              <div id="instagram-embed">
                <img alt="instagram-image" id="img1" />
              </div>
            </a>
          </div> -->
        </aside>
      </section>

    </main>

    <!-- footer -->
    <footer>
      <%- include ('partials/footer') %>
    </footer>

    <!-- scripts -->
    <script src="../libs/common.js"></script>
    <script src="../libs/index.js"></script>
  </body>
  <!-- loader -->
  <%- include ('partials/loader') %>
</html>
