<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('partials/head') %>
    <link rel="stylesheet" href="css/index.css">
</head>
<body class="fade-in">
    <!-- header -->
    <header>
        <%- include ('partials/header') %>
    </header>

    <main>
        <!-- main section -->
        <section>
            <!-- articles -->
            <div class="article">
                <% for (post of posts){ %> 
                    <a href="/diary/<%= post._id %>">
                        <div class="post">
                            <h1>
                                <%= post.title %>
                            </h1>
                            <p>
                                <%= post.content %>
                            </p>
                        </div>
                    </a>
                <% } %> 
            </div>
            
            <!-- drawings -->
            <div class="drawing">
                <% imgs.forEach(img => { %>
                    <div>
                        <img src="imgs/music/<%= img.id %>.jpg" alt="<%= img.id %> ">
                    </div>
                <% }) %>
            </div>

        </section>

        <!-- side section -->
        <aside>
            <div class="contact-info">
                <b>CONTACT</b>
                <p>
                    이동규 / Justin Lee
                    <br>
                    nninnnin7@gmail.com
                    <br>
                    justindglee.com
                </p>
                <br>
            </div>

            <div class="insta-photo">
                <b>INSTAGRAM</b>
                
                
                <div id="instagram-embed">
                <img alt="instagram-image" id="img1">
                </div>
            </div>
        </aside>
    </main>

        <!-- footer -->
        <footer>
            <%- include ('partials/footer')  %>
        </footer>
        <i class="fas fa-chevron-circle-up fa-2x" id="home"></i>
    </div>

    <!-- common.js -->
    <script src="../libs/common.js"></script>

